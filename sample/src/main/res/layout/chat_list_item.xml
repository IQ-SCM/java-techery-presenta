<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="chatItemViewModel"
            type="com.example.presenta.vm.ChatItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{chatItemViewModel.id}"
            app:onClickListener="@{chatItemViewModel.onClickListener}" />

        <TextView
            android:id="@+id/chat_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{chatItemViewModel.name}" />

        <TextView
            android:id="@+id/chat_item_first_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{chatItemViewModel.firstMessageBody}" />
    </LinearLayout>
</layout>